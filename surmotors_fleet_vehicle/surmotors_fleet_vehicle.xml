<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- form -->
        <record id="view_form_add_attr_vehiculos" model="ir.ui.view">
            <field name="name">Vehiculos</field>
            <field name="model">fleet.vehicle</field>
            <field name='inherit_id' ref='fleet.fleet_vehicle_form'/>
            <field name="arch" type="xml">
                <field name="license_plate" position="replace"/>
                <xpath expr="//button[@name='return_action_to_open']" position="replace"/>
                <xpath expr="//button[@name='act_show_log_cost']" position="replace"/>
                <xpath expr="//button[@name='return_action_to_open']" position="replace"/>
                <xpath expr="//button[@name='return_action_to_open']" position="replace"/>
                <xpath expr="//button[@name='return_action_to_open']" position="replace"/>
                <field name="tag_ids" position="after">
                    <label for="res_partner_id" class="oe_edit_only"/>
                    <h2>
                        <field name="res_partner_id" modifiers="{}" class="oe_inline" placeholder='Cliente' domain="[('customer','=', True)]"/>
                    </h2>
                </field>
                <field name="driver_id" position="before">
                    <field name="license_plate" string="Placa"/>
                </field>
                <field name="vin_sn" position="after">
                    <field name="equipment_vehicle_id"/>
                </field>
                <field name="car_value" position="after">
                    <field name="nro_chasis"/>
                    <field name="motor"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
